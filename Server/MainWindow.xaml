<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Messenger Server" Height="500" Width="700"
        Background="#1E1E1E" Foreground="White">

	<Window.Resources>
		<Style TargetType="Button">
			<Setter Property="Background" Value="#007ACC"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="10,5"/>
			<Setter Property="Margin" Value="5"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>

		<Style TargetType="TextBox">
			<Setter Property="Background" Value="#2D2D30"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#3E3E42"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="5"/>
		</Style>

		<Style TargetType="TextBlock">
			<Setter Property="Foreground" Value="#CCCCCC"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Header -->
		<Border Grid.Row="0" Background="#007ACC" Padding="15">
			<StackPanel Orientation="Horizontal">
				<TextBlock Text="ðŸš€ " FontSize="20"/>
				<TextBlock Text="Messenger Server" FontSize="16" FontWeight="Bold"/>
			</StackPanel>
		</Border>

		<!-- Main Content -->
		<Grid Grid.Row="1">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="300"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<!-- Server Controls -->
			<StackPanel Grid.Column="0" Margin="10">
				<TextBlock Text="IP Address:" Margin="0,0,0,5"/>
				<TextBox x:Name="txtIp" Text="127.0.0.1" FontSize="14"/>

				<TextBlock Text="Port:" Margin="0,10,0,5"/>
				<TextBox x:Name="txtPort" Text="8888" FontSize="14"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
					<Button x:Name="btnStart" Content="Start" Click="BtnStart_Click" Width="80"/>
					<Button x:Name="btnStop" Content="Stop" Click="BtnStop_Click" Width="80" Margin="10,0,0,0" IsEnabled="False"/>
				</StackPanel>
			</StackPanel>

			<!-- Log -->
			<Border Grid.Column="1" Margin="10" Background="#0F0F0F" CornerRadius="5">
				<TextBox x:Name="txtLog" IsReadOnly="True" Background="Transparent"
                         Foreground="#00FF00" BorderThickness="0" FontFamily="Consolas"
                         FontSize="12" VerticalScrollBarVisibility="Auto"/>
			</Border>
		</Grid>

		<!-- Status Bar -->
		<StatusBar Grid.Row="2" Background="#007ACC" Foreground="White">
			<StatusBarItem>
				<TextBlock x:Name="statusText" Text="Server not running"/>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>